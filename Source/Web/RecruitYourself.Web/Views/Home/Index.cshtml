@model RecruitYourself.Web.ViewModels.Home.IndexViewModel

@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="box">
        <div class="col-lg-12 text-center">
            <h1 class="brand-before text-right">
                <small>Newest Events</small>
            </h1>
            <div id="carousel-example-generic" class="carousel slide">
                <!-- Indicators -->
                <ol class="carousel-indicators hidden-xs">
                    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                </ol>
                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    @for (int i = 0; i < Model.Events.Count(); i++)
                    {
                        if (i == 0)
                        {
                            <div class="item active">
                                <h1 class="event-title">@Html.ActionLink(Model.Events[i].Name, "ById", "AllEvents", new { area = "Event", id = Model.Events[i].EncodedId }, null)</h1>
                                <img class="img-responsive img-full" src="@Model.Events[i].Image" alt="">
                            </div>
                        }
                        else
                        {
                            <div class="item">
                                <h1 class="event-title">@Html.ActionLink(Model.Events[i].Name, "ById", "AllEvents", new { area = "Event", id = Model.Events[i].EncodedId }, null)</h1>
                                <img class="img-responsive img-full" src="@Model.Events[i].Image" alt="">
                            </div>
                        }
                    }

                    @*<div class="item">
                            <img class="img-responsive img-full" src="img/slide-2.jpg" alt="">
                        </div>
                        <div class="item">
                            <img class="img-responsive img-full" src="img/slide-3.jpg" alt="">
                        </div>*@
                </div>
                <!-- Controls -->
                <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                    <span class="icon-prev"></span>
                </a>
                <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                    <span class="icon-next"></span>
                </a>
            </div>
            <h1 class="brand-name">Make a Difference</h1>
            <hr class="tagline-divider">
            <h2>
                <small>
                    Become
                    <strong>a Volunteer</strong>
                </small>
            </h2>
        </div>
    </div>
</div>
@foreach (var item in Model.Articles)
{
    <div class="row">
        <div class="box">
            <div class="item-container col-lg-12">

                <h1 class="brand-before text-right">
                    <small>Newest Article</small>
                </h1>
                <hr>
                <h1 class="intro-text text-center">
                    @Html.ActionLink(item.Name, "ById", "AllArticles", new { area = "Article", id = item.EncodedId }, null)
                </h1>
                <hr>
                <img class="img-responsive img-border img-left" src="@item.Image" alt="Article Image">
                <hr class="visible-xs">
                <p>@item.Content</p>
            </div>
        </div>
    </div>
}
<div class="row">
    <div class="box">
        <div class="col-lg-12">
            <hr>
            <h2 class="intro-text text-center">
                What is
                <strong>volunteering?</strong>
            </h2>
            <hr>
            <p>Volunteering is about giving your time to a good cause. You don't get paid, but you do get the chance to use your talents, develop new skills, and experience the pleasure that comes from making a real difference to other people's lives, as well as your own.</p>
            <p>One of the better-known benefits of volunteering is the impact on the community. Unpaid volunteers are often the glue that holds a community together. Volunteering allows you to connect to your community and make it a better place. However, volunteering is a two-way street, and it can benefit you and your family as much as the cause you choose to help. Dedicating your time as a volunteer helps you make new friends, expand your network, and boost your social skills.</p>
        </div>
    </div>
</div>

@section scripts {
    <!-- Script to Activate the Carousel -->
    <script>
        $('.carousel').carousel({
            interval: 5000
        })
    </script>
}