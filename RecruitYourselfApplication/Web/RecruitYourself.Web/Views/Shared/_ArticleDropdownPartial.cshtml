@using RecruitYourself.Common.Constants

<li>
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
        Articles<span class="caret"></span>
    </a>
    <ul class="dropdown-menu" role="menu">
        <li>
            @Html.ActionLink("All Articles", "Index", "Articles", new { area = "Article" }, null)
        </li>
        @if (this.Request.IsAuthenticated && !this.Context.User.IsInRole(RoleConstants.VolunteerRoleConstant))
            {
            <li>
                @Html.ActionLink("Create Article", "Register", "Account", routeValues: new { type = "Organization" }, htmlAttributes: new { id = "registerOrganizationLink" })
            </li>
        }
    </ul>
</li>
