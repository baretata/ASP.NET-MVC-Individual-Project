@model RecruitYourself.Web.Areas.Article.ViewModels.ArticleInputModel

@{
    ViewBag.Title = "Create Article";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="form-horizontal col-lg-6">
            <div class="box">
                <h4 class="text-center">Create Article</h4>
                <hr />
                @Html.ValidationSummary(true, string.Empty, new { @class = "text-danger" })

                <div class="col-md-11 col-md-offset-1">
                    <div class="form-group">
                        <div class="col-md-3 text-right">
                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                        </div>
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, string.Empty, new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="col-md-11 col-md-offset-1">
                    <div class="form-group">
                        <div class="col-md-3 text-right">
                            @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2" })
                        </div>
                        <div class="col-md-9">
                            @Html.TextAreaFor(model => model.Content, new { @class = "form-control", rows = "5" })
                            @Html.ValidationMessageFor(model => model.Content, string.Empty, new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                        <input type="reset" value="Cancel" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
