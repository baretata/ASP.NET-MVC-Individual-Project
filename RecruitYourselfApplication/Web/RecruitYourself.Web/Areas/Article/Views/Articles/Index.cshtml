@model IEnumerable<RecruitYourself.Web.Areas.Article.ViewModels.ArticleViewModel>

@{
    ViewBag.Title = "Article Index";
}

<div class="row">
    <div class="box">
        <h2 class="text-center article-header">Recent Articles</h2>
        <form class="form-inline">
            <div class="form-group">
                @using (Html.BeginForm())
                {
                    @Html.TextBox("searchQuery", null, new { @class = "search-text form-control", placeholder = "Search..." })
                    @*<input type="text" name="searchQuery" value="@ViewBag.searchQuery" class="search-text form-control" placeholder="Search..." />*@
                    @*Html.ActionLink("Search", "Search", "Articles", new { search = "0" }, new { @class = "btn btn-default" });*@

                    <input type="submit" class="btn btn-default" value="Search" />
                }
            </div>
        </form>
    </div>
</div>

@foreach (var item in Model)
{
    <div class="row">
        <div class="box">
            <div class="article-container col-lg-12">
                <hr>
                <h2 class="intro-text text-center">
                    @*<a href="@item.EncodedId">@item.Name</a>*@
                    @Html.ActionLink(item.Name, "ById", "Articles", new { id = item.EncodedId }, null)
                </h2>
                <hr>
                <img class="img-responsive img-border img-left" src="@item.Image" alt="Article Image">
                <hr class="visible-xs">
                <p>@item.Content</p>
            </div>
        </div>
    </div>
