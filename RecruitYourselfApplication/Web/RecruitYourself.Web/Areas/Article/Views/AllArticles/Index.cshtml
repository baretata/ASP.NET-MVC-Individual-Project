@model IEnumerable<RecruitYourself.Web.Areas.Article.ViewModels.ArticleViewModel>

@{
    ViewBag.Title = "Article Index";
}

<div class="row">
    <div class="box">
        <h2 class="text-center article-header">Recent Articles</h2>
        <form class="form-inline">
            <div class="form-group">
                @using (Html.BeginForm())
                {
                    @Html.TextBox("searchQuery", null, new { @class = "search-text form-control", placeholder = "Search..." })
                    <input type="submit" class="btn btn-default" value="Search" />
                }
            </div>
        </form>
    </div>
</div>

@foreach (var item in Model)
{
    <div class="row">
        <div class="box">
            <div class="article-container col-lg-12">
                <hr>
                <h2 class="intro-text text-center">
                    @Html.ActionLink(item.Name, "ById", "AllArticles", new { id = item.EncodedId }, null)
                </h2>
                <hr>
                <img class="img-responsive img-border img-left" src="@item.Image" alt="Article Image">
                <hr class="visible-xs">
                <p>@item.Content</p>
            </div>
        </div>
    </div>
}

